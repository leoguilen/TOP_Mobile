<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTop.PageValidaCadastro">
    <ContentPage.Content>
        <StackLayout BackgroundColor="WhiteSmoke" HorizontalOptions="Fill" 
                 VerticalOptions="Fill">

            <StackLayout HorizontalOptions="CenterAndExpand">
                <Image Source="LogoNovo.png"
                   WidthRequest="120"
                   HeightRequest="120"/>
            </StackLayout>

            <StackLayout BackgroundColor="WhiteSmoke" 
                     VerticalOptions="Center" Padding="20">

                <Label Text="Vamos confirmar seu cadastro agora!" 
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   FontSize="30"
                   FontAttributes="Bold"/>

                <Label Text="Digite aqui o código recebido no seu celular" 
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>
                <Entry x:Name="txtCodVerificar" TextColor="#808080"
                   PlaceholderColor="Black" Keyboard="Numeric"
                   HorizontalTextAlignment="Center"/>

                <Button Text="Verificar" BackgroundColor="Teal"
                    TextColor="White" Clicked="Validar_Clicked"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>